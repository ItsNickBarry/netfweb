{
  "manifest_version": 2,

  "name": "Film scores for Netflix",
  "short_name": "netfweb",
  "version": "0.5.0",
  "description": "Extension enriches netflix browser with a rating based on the scores from IMDb.com, FilmWeb.pl, Netflix.pl and Metacritic.com sites.",
  "permissions": [
    "https://www.netflix.com/",
    "http://api.nflix.pl/",
    "http://www.filmweb.pl/",
    "http://www.metacritic.com/",
    "http://www.imdb.com/",
    "http://lina.pl/",
    "https://unogs.com/",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs"
   ],
 "web_accessible_resources": [ "star.png", "wrong.png", "ok.png" ],

 "icons": { "16": "icon16.png" , "48": "icon48.png", "128": "icon128.png" },

  "browser_action": {
    "default_icon": { "16": "icon16.png" , "48": "icon48.png", "128": "icon128.png" },
    "default_title": "Film scores for Netflix",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["https://www.netflix.com/*"],
    "js": ["jquery.js", "content.js"],
    "css": ["content.css"]
  }],

  "background": {
    "scripts": ["jquery.js", "map_imdb.js", "map_filmweb.js", "map_metacritic.js", "background.js"],
    "persistent": true
  }

}
